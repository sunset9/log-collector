<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔로 로그를 남김 -->
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">

        <!--<filter class="ch.qos.logback.core.filter.EvaluatorFilter">-->
            <!--<evaluator>-->
                <!--<expression>return message.contains("NOT_SQL_LOG");</expression>-->
            <!--</evaluator>-->
            <!--<OnMismatch>NEUTRAL</OnMismatch>-->
            <!--<OnMatch>DENY</OnMatch>-->
        <!--</filter>-->

        <encoder>
            <charset> UTF-8 </charset>
            <!-- 로그 메시지 패턴 -->
            <Pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </Pattern>
        </encoder>

    </appender>

    <!-- 일반로그: 파일 -->
    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/server-log.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset> UTF-8 </charset>
            <Pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
            </Pattern>
        </encoder>

        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>logs/server-log.log.%i</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>10</MaxIndex>
        </rollingPolicy>
    </appender>

    <!--에러용 로그 : 파일 -->
    <appender name="errorFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error/server-error-log.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset> UTF-8 </charset>
            <Pattern>
                %d{HH:mm:ss.SSS} %logger{5} - %msg%n
            </Pattern>
        </encoder>

        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>logs/error/server-error-log.log.%i</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>10</MaxIndex>
        </rollingPolicy>
    </appender>


    <logger name="com.mobigen.fileio" level="info" additivity="false">
        <appender-ref ref="consoleAppender" />
        <appender-ref ref="fileAppender" />
    </logger>

    <logger name="com.mobigen.fileio.service.ErrorLogManager" level="error" additivity="false">
        <appender-ref ref="errorFileAppender" />
    </logger>

    <!--<logger name="jdbc.sqlonly" additivity="false"/>-->

    <root level="warn">
        <!--<appender-ref ref="consoleAppender" />-->
        <appender-ref ref="fileAppender" />
    </root>


</configuration>
